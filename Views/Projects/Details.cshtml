@model ShadowTracker.Models.Project
@using ShadowTracker.Services.Interfaces
@using Microsoft.AspNetCore.Identity;
@inject IBTProjectService _projectService
@inject IImageService _imageService
@inject IBTTicketHistoryService _ticketHistoryService
@inject UserManager<BTUser> _userManager

@{
    ViewData["Title"] = "Details";
    BTUser projectManager = await _projectService.GetProjectManagerAsync(Model.Id);
    BTUser btUser = await _userManager.GetUserAsync(User);
}
<h1>Details</h1>

<div>
    <div class="container-fluid">
        <div class="row gy-2">
            <div class="col-md-12 col">
                <div class="row col-cols-2 mt-5 bg-secondary">
                    <div class="card col m-1 p-2">
                        <div class="body">

                            <h5>@Model.Name</h5>
                            @* Project Description *@
                            <p>@Model.Description</p>
                            <div class="progress-container progress-info m-b-25">
                                <span class="progress-badge" style="font-size:small">Project Status</span>
                                <div class="progress">
                                    @* Razor code block *@
                                    @{
                                        var start = Model.StartDate.Value;
                                        var end = Model.EndDate.Value;
                                        var today = DateTime.Now;
                                        var percent = today >= end ? 100 : today < start ? 0 : Math.Round((today.Subtract(start)) / (end.Subtract(start)) * 100);
                                    }
                                    [Progress Bar code]
                                    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @percent%;">
                                        @* Use Progress Bar code variable here *@
                                        <span class="progress-value">100%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card col m-1 p-2">
                        <div class="body">
                            <ul class=" list-unstyled basic-list">
                                <li>Start Date: <span class="">@Model.StartDate.Value.ToString("MM/dd/yyyy")</span></li>
                                <li>Deadline: <span class="">@Model.EndDate.Value.ToString("MM/dd/yyyy")</span></li>
                                <li>Priority: <span class="">@Model.ProjectPriority.Name</span></li>
                                @* if() logic *@
                                @if (Model.EndDate < DateTime.Now)
                                {
                                    <li>Status: <span class="">Inactive</span></li>
                                }
                                else
                                {
                                    <li>Status: <span class="">Active</span></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col mt-5 ">
                <div class="bg-secondary">
                    <div class="card m-1 p-2">
                        <div class="header">
                            <h2>Project Manager</h2>
                            <hr />
                        </div>
                        <div class="body" style="overflow-y:auto;height:300px;">
                            @if (projectManager != null)
                            {
                                @if (projectManager?.AvatarFormFile != null)
                                {

                                    @* if() logic for Avatar/Default etc *@
                                    <img src="@_imageService.DecodeImage(Model.ImageFileData, Model.ImageContentType)" />
                                    <h5>@projectManager?.FullName</h5>
                                }

                                else
                                {
                                    <div class="body" style="overflow-y:auto;height:300px;">

                                        @* if() logic for Avatar/Default etc *@
                                        <img src="~/img/SuitDefaultAccountImage.png" />
                                        <h5>@projectManager?.FullName</h5>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col mt-5 ">
                <div class="bg-secondary">
                    <div class="card m-1 p-2">
                        <div class="header">
                            <h2>Project Team</h2>
                            <hr />
                        </div>
                        <div class="body" style="overflow-y:auto;height:300px;">
                            <ul class="right_chat list-unstyled mb-0">
                                @if (Model.Members.Count != 0)
                                {
                                    @foreach (BTUser user in Model.Members)
                                    {
                                        <li>
                                            @if (user.AvatarFormFile != null)
                                            {
                                                <img class="bs-tooltip" title="@user.FullName" src="@_imageService.DecodeImage(user.AvatarFileData, user.AvatarContentType)" />
                                            }
                                            else
                                            {
                                                <img class="bs-tooltip" title="@user.FullName" src="~/img/SuitDefaultAccountImage.png" width="64" height="64" />
                                            }
                                        </li>
                                    }
                                }
                                else
                                {
                                    <p>No Members Assigned To This Project.</p>

                                }

                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-warning btn-sm" asp-action="AssignPM" asp-controller="Projects" asp-route-projectId="@Model.Id">Assign Project Manager</a>
                                }

                                @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                                {
                                    <a class="btn btn-warning btn-sm" asp-action="AssignMembers" asp-controller="Projects" asp-route-projectId="@Model.Id">Assign Members</a>
                                }

                                @if (!User.IsInRole("Admin") && !User.IsInRole("ProjectManager"))
                                {
                                    <p>No Members Assigned to this Project</p>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col mt-5 ">
                <div class="bg-dark">
                    <div class="card m-1 p-2">
                        <div class="header">
                            <h2>Project Activity</h2>
                            <hr />
                        </div>
                        <div class="body" style="overflow-y:auto;height:300px;background-color:antiquewhite">
                            @* Project Activity loop *@
                            @foreach (TicketHistory history in await _ticketHistoryService.GetProjectTicketsHistoriesAsync(Model.Id, btUser.CompanyId))
                            {
                                <div class="">
                                    <span class="date">@history.Created.ToString("dd MMM yyyy")</span>
                                    <h6>@history.Description</h6>
                                    <span>By: <a href="" title="@history.User.FullName">@history.User.FullName</a></span>
                                    <div class="">
                                        <p>The ticket <b>@history.Property</b>  was edited</p>
                                        <p>@($"Previous {history.Property}:  {history.OldValue}")</p>
                                        <p>@($"Current {history.Property}:  {history.NewValue}")</p>
                                    </div>
                                </div>}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col">
                <div class="mt-5 bg-secondary">
                    <div class="card m-1 p-2">
                        <div class="header">
                            <h2>Tickets</h2>
                        </div>
                        <div class="body">
                            <div class="table-responsive" style="overflow-y:auto;height:600px;">
                                <table class="table table-hover">
                                    <thead class="">
                                        <tr>
                                            @* Table header *@
                                            <th>Title</th>
                                            <th>Developer</th>
                                            <th>Status</th>
                                            <th>Priority</th>
                                            <th>Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Ticket ticket in Model.Tickets)
                                        {
                                            <tr>

                                                <td>@ticket.Title</td>
                                                @if (ticket.DeveloperUser != null)
                                                {
                                                    <td>@ticket.DeveloperUser.FullName</td>
                                                }
                                                else
                                                {
                                                    <td><a class=" btn btn-warning btn-sm" asp-action="AssignDeveloper" asp-controller="Tickets" asp-route-ticketId="@ticket.ProjectId">Assign Developer</a></td>
                                                }

                                                <td>@ticket.TicketStatus.Name</td>
                                                <td>@ticket.TicketPriority.Name</td>
                                                <td>@ticket.TicketStatus.Name</td>
                                                <td>@ticket.Created.ToString("dd/MM/yy")</td>
                                                <td>
                                                    <a class="btn btn-secondary" asp-action="Edit" asp-controller="Tickets" asp-route-id="@ticket.Id">EDIT</a>
                                                    <a class="btn btn-secondary" asp-action="Details" asp-controller="Tickets" asp-route-id="@ticket.Id">DETAILS</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>